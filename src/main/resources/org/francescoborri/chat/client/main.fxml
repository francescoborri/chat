        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
        <TextField fx:id="input" onAction="#send" promptText="Write something..." HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="5.0" />
            </HBox.margin>
        </TextField>
        <Button fx:id="send" mnemonicParsing="false" onAction="#send" style="-fx-background-color: #3276e3;" text="Send" textFill="WHITE">
            <HBox.margin>
                <Insets left="5.0" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
